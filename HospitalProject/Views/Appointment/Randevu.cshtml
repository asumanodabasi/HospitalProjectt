@model HospitalProject.Models.RandevuModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hospital Appointment System</title>

    
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
    <style>
        #calendar {
            display: inline-block;
        }
    </style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebProje</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HospitalProject.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"> </script>

    <link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
</head>
<body>
    <div>

        @* <form  asp-action="RandevuEkle" method="post"> *@
    <label for="il">İl:</label>
    <select id="il" name="il" class="form-select" aria-label="Default select example">
        <option value="">Lütfen İl Seçiniz</option>
        @foreach (var il in Model.Cities)
        {
            <option value="@il.Id">@il.Name</option>
        }
    </select>

    <label for="ilce">İlçe:</label>
    <select id="ilce" name="ilce" class="form-select" aria-label="Default select example">
        <option value="">Lütfen İlçe Seçiniz</option>

    </select>

    <label for="hastane">Hastane:</label>
    <select id="hastane" name="hastane" class="form-select" aria-label="Default select example">
        <option value="">Lütfen Hastane Seçiniz</option>
        <option value="">Lütfen Hastane Seçiniz</option>
    </select>

    <label for="klinik">Klinik:</label>
    <select id="klinik" name="klinik" class="form-select" aria-label="Default select example">
        <option value="">Lütfen Klinik Seçiniz</option>
    </select>

    <label for="doctor">Doktor:</label>
    <select id="doctor" name="doctor" class="form-select" aria-label="Default select example">
        <option value="">Lütfen Doktor Seçiniz</option>
    </select>
    
   @functions {
        DateTime Today = DateTime.Now.Date; }
    <div>
        <label for="calendar">Tarih Seçin:</label>
        <input type="date" id="calendar" onchange="loadAvailableAppointments()" min="@Today.ToString("yyyy-MM-dd")">
    </div

    

    <label for="saat">Saat:</label>
    <select id="saat" name="saat" class="form-select" aria-label="Default select example">
        <option value="">Lütfen Saat Seçiniz</option>
        <option value="">Lütfen Saat Seçiniz</option>
    </select>

    <button id="randevuAl" class="submit" type="submit">Randevu Al</button>
    @* </form> *@
           
    
    @if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
    </div>
</body>
<script src="~/js/ilsec.js"></script>



</html>

